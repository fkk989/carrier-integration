  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",

    "rootDir": ".",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
